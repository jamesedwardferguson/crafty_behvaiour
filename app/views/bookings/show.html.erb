<p id="notice"><%= notice %></p>

<p>
  <strong>Name last:</strong>
  <%= @booking.name_last %>
</p>

<p>
  <strong>Name first:</strong>
  <%= @booking.name_first %>
</p>

<p>
  <strong>Date:</strong>
  <%= @booking.date %>
</p>

<p>
  <strong>Session:</strong>
  <%= @booking.tour_session_id %>
</p>

<p>
  <strong>Number people:</strong>
  <%= @booking.number_people %>
</p>


<p>Confirm your booking and pay</p>

<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>

    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="500"
          data-locale="auto"></script>
<% end %>


<%= link_to 'Edit', edit_booking_path(@booking) %> |
<%= link_to 'Back', bookings_path %>
