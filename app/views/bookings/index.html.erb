<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Name last</th>
      <th>Name first</th>
      <th>Date</th>
      <th>Session</th>
      <th>Number people</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.name_last %></td>
        <td><%= booking.name_first %></td>
        <td><%= booking.date %></td>
        <td><%= booking.session_id %></td>
        <td><%= booking.number_people %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

