<p id="notice"><%= notice %></p>

<h1>Listing Tours</h1>

<table>
  <thead>
    <tr>
      <th>Tour name</th>
      <th>Price</th>
      <th>Num capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.tour_name %></td>
        <td><%= tour.price %></td>
        <td><%= tour.num_capacity %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

