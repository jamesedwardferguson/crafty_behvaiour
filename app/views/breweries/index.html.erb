<p id="notice"><%= notice %></p>

<h1>Listing Breweries</h1>

<table>
  <thead>
    <tr>
      <th>Brewery name</th>
      <th>Address</th>
      <th>Long</th>
      <th>Lat</th>
      <th>Image</th>
      <th>Description</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.brewery_name %></td>
        <td><%= brewery.address %></td>
        <td><%= brewery.longitude %></td>
        <td><%= brewery.latitude %></td>
        <td><%= brewery.image %></td>
        <td><%= brewery.description %></td>
        <td><%= brewery.website %></td>
        <td><%= link_to 'Show', brewery %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

